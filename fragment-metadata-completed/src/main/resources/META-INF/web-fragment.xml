<?xml version="1.0" encoding="UTF-8"?>
<web-fragment
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
        version="3.0"
        metadata-complete="true">

    <name>fragment</name>

    <filter>
        <filter-name>fragmentFilter</filter-name>
        <filter-class>io.docbot.servlet3.fragment.filter.FragmentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>fragmentFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>fragmentServlet</servlet-name>
        <servlet-class>io.docbot.servlet3.fragment.servlet.FragmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fragmentServlet</servlet-name>
        <url-pattern>/fragmentServlet</url-pattern>
    </servlet-mapping>


</web-fragment>
